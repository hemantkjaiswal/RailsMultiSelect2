<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @book.name %>
</p>

<% if @book.authors.present? %>
	<h4>List of Books</h4>
	<% @book.authors.each do |author| %>
	   <p><%= link_to author.name, author %></p>
	<% end %>   
<% else %>
	<h4>No Author for this book yet</h4>
<% end %>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
